{
  "manifest_version": 3,
  "name": "Muslim Companion",
  "version": "1.0.0",
  "description": "A comprehensive Chrome extension for Muslims featuring prayer times, Qibla direction, reminders, and more",
  "default_locale": "en",
  "permissions": [
    "geolocation",
    "storage",
    "alarms",
    "notifications"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}